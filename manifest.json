{
  "manifest_version": 3,
  "name": "LLM View Extractor",
  "version": "1.0.0",
  "description": "Extract and compare multiple views from any webpage using AI",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "host_permissions": ["https://api.anthropic.com/*", "<all_urls>"],
  "action": {
    "default_popup": "src/ui/popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
